fragment_program Compositor/Tiling_Cg_FP cg
{
	source TilingFP.cg
	entry_point Tiling_ps
	profiles ps_4_0 ps_2_0 arbfp1
}

fragment_program Compositor/Tiling_GLSLES_FP glsles
{
	source TilingFP.glsles
}

fragment_program Compositor/Tiling_GLSL_FP glsl
{
	source TilingFP.glsl
	syntax glsl150
}

fragment_program Compositor/TilingFP unified
{
    delegate Compositor/Tiling_GLSL_FP
    delegate Compositor/Tiling_GLSLES_FP
    delegate Compositor/Tiling_Cg_FP
}

material Compositor/Tiling
{
    technique
    {

		pass
		{
			cull_hardware none
			cull_software none
			depth_func always_pass
            polygon_mode_overrideable false

			vertex_program_ref Compositor/StdQuad_Tex2a_vp
			{
			}

			//DirectX 9.0 HLSL Pixel Shader ps_2_0
			fragment_program_ref Compositor/TilingFP
			{
				param_named NumTiles float 75.0
				param_named Threshold float 0.15
			}

			texture_unit RT
			{
                tex_coord_set 0
				tex_address_mode clamp
				filtering trilinear
			}

		}
	}
}
